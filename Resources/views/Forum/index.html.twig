{% extends 'ForumBundle::layout.html.twig' %}
{% block title %}Forum, a simple Symfony2 forum{% endblock %}
{% block content %}
<div class="forum forum_index">
    <ul class="crumbs">
        <li>Forum</li>
    </ul>
    <div class="main topics">
        <h2>Latest topics</h2>
        {% render 'ForumBundle:Topic:list' with {'category': null, 'pagerOptions': {'page': page}} %}
    </div>
    <div class="side categories">
        <h2>Categories</h2>
        {% render 'ForumBundle:Category:list' %}
    </div>
</div>
{% endblock %}

