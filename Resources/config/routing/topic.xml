<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://www.symfony-project.org/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.symfony-project.org/schema/routing http://www.symfony-project.org/schema/routing/routing-1.0.xsd">

    <route id="forum_topic_show" pattern="/:categorySlug/:id.:_format">
        <default key="_controller">ForumBundle:Topic:show</default>
        <default key="_format">html</default>
        <requirement key="_method">GET</requirement>
        <requirement key="_format">(html|xml)</requirement>
        <requirement key="id">[a-h\d]+</requirement>
    </route>

    <route id="forum_topic_new" pattern="/topic/new/:categorySlug">
        <default key="_controller">ForumBundle:Topic:new</default>
        <default key="categorySlug"></default>
        <requirement key="_method">GET</requirement>
    </route>

    <route id="forum_topic_create" pattern="/topic/new/:categorySlug">
        <default key="categorySlug"></default>
        <default key="_controller">ForumBundle:Topic:create</default>
        <requirement key="_method">POST</requirement>
    </route>

</routes>
